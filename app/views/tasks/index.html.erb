<div class="container d-flex justify-content-center">
  <div class="card mt-5" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title text-center">My tasks</h5>
      <ul>
    <% @tasks.each do |task| %>
    <% if task.completed %>

  <li><i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %></li>
  <% else %>
  <li><i class="far fa-square"></i> <%= link_to task.title, task_path(task) %></li>
  <%end%>

    <% end %>
  </ul>
      <%= link_to new_task_path do%>
      <i class="far fa-plus-square btn btn-primary"> Add a new task </i>
      <%end%>
    </div>
  </div>
<%# <h1> My tasks </h1> %>
</div>



